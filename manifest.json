{
  "manifest_version": 2,

  "icons": {
    "128": "book.png"
  },

  "name": "Smarter Duo",
  "description": "This extension makes Duolingo's choice of practice more intelligent",
  "version": "1.0",

  "browser_action": {
    "default_icon": "book.png",
    "default_popup": "popup.html",
    "default_title": "Start practice"
  },

  "permissions": [
    "activeTab",
    "storage",
    "https://www.duolingo.com/api/1/"
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
